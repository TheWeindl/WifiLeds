<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.damnserver.hgb1.androidclient.MainActivity">


    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editTextBlue"
            android:layout_alignEnd="@+id/editTextBlue"
            android:layout_alignStart="@+id/editTextBlue"
            android:layout_alignTop="@+id/textView3"
            android:text="Blue"
            tools:text="Blue" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editTextGreen"
            android:layout_alignEnd="@+id/editTextGreen"
            android:layout_alignStart="@+id/editTextGreen"
            android:layout_alignTop="@+id/textView2"
            android:text="Green"
            tools:text="Green" />

        <EditText
            android:id="@+id/editTextBlue"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/editTextGreen"
            android:layout_alignTop="@+id/editTextGreen"
            android:layout_marginStart="22dp"
            android:layout_toEndOf="@+id/editTextGreen"
            android:ems="10"
            android:inputType="number"
            android:singleLine="true" />

        <EditText
            android:id="@+id/editTextGreen"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editTextRed"
            android:layout_alignBottom="@+id/editTextRed"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:inputType="number"
            android:singleLine="true" />

        <EditText
            android:id="@+id/editTextRed"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="33dp"
            android:layout_marginTop="115dp"
            android:ems="10"
            android:inputType="number"
            android:singleLine="true" />

        <Button
            android:id="@+id/Send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/editTextBlue"
            android:layout_alignStart="@+id/editTextRed"
            android:layout_below="@+id/editTextBlue"
            android:layout_marginTop="22dp"
            android:onClick="sendColors"
            android:text="Update" />

        <ToggleButton
            android:id="@+id/OnButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/editTextRed"
            android:layout_marginTop="17dp"
            android:checked="true"
            android:text="ToggleButton" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editTextGreen"
            android:layout_alignStart="@+id/editTextRed"
            android:text="Red"
            tools:text="Red"
            android:layout_alignEnd="@+id/editTextRed" />

        <EditText
            android:id="@+id/editTextID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/OnButton"
            android:layout_alignEnd="@+id/textView4"
            android:layout_alignStart="@+id/textView4"
            android:ems="10"
            android:inputType="number"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:text="1"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:visibility="visible"
            tools:text="1" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView3"
            android:layout_alignTop="@+id/editTextID"
            android:text="ID:"
            android:textAlignment="textStart"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:text="ID:" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>

